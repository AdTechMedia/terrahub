    variable:
      {{ name }}_data_locale:
        type: string
      {{ name }}_events_out_of_order_policy:
        type: string
      {{ name }}_output_error_policy:
        type: string
      {{ name }}_transformation_query:
        type: string
      {{ name }}_name:
        type: string
      {{ name }}_compatibility_level:
        type: string
      {{ name }}_events_late_arrival_max_delay_in_seconds:
        type: int
      {{ name }}_events_out_of_order_max_delay_in_seconds:
        type: int
      {{ name }}_streaming_units:
        type: int
    output:
      id:
        value: azurerm_arm_stream_analytics_job.{{ name }}.id
      thub_id:
        value: azurerm_arm_stream_analytics_job.{{ name }}.id
      job_id:
        value: azurerm_arm_stream_analytics_job.{{ name }}.job_id
