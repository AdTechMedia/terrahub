    resource:
      azurerm_arm_stream_analytics_job:
        {{ name }}:
          data_locale: var.{{ name }}_data_locale
          events_out_of_order_policy: var.{{ name }}_events_out_of_order_policy
          output_error_policy: var.{{ name }}_output_error_policy
          transformation_query: var.{{ name }}_transformation_query
          name: var.{{ name }}_name
          compatibility_level: var.{{ name }}_compatibility_level
          events_late_arrival_max_delay_in_seconds: var.{{ name }}_events_late_arrival_max_delay_in_seconds
