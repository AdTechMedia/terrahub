      {{ name }}_edition:
        type: string
      {{ name }}_dtu:
        type: int
      {{ name }}_name:
        type: string
    output:
      id:
        value: azurerm_arm_sql_elasticpool.{{ name }}.id
      thub_id:
        value: azurerm_arm_sql_elasticpool.{{ name }}.id
      db_dtu_min:
        value: azurerm_arm_sql_elasticpool.{{ name }}.db_dtu_min
      db_dtu_max:
        value: azurerm_arm_sql_elasticpool.{{ name }}.db_dtu_max
      creation_date:
        value: azurerm_arm_sql_elasticpool.{{ name }}.creation_date
      pool_size:
        value: azurerm_arm_sql_elasticpool.{{ name }}.pool_size
