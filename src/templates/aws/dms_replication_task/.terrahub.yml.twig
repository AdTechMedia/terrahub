        type: string
      {{ name }}_source_endpoint_arn:
        type: string
      {{ name }}_table_mappings:
        type: string
      {{ name }}_target_endpoint_arn:
        type: string
    output:
      id:
        value: aws_dms_replication_task.{{ name }}.id
      thub_id:
        value: aws_dms_replication_task.{{ name }}.id
      replication_task_arn:
