    variable:
      {{ name }}_resource_arn:
        type: string
      {{ name }}_reservoir_size:
        type: int
      {{ name }}_service_type:
        type: string
      {{ name }}_host:
        type: string
      {{ name }}_version:
        type: int
      {{ name }}_priority:
        type: int
      {{ name }}_fixed_rate:
        type: float
      {{ name }}_service_name:
        type: string
      {{ name }}_http_method:
        type: string
      {{ name }}_url_path:
        type: string
    output:
      id:
        value: aws_xray_sampling_rule.{{ name }}.id
      thub_id:
        value: aws_xray_sampling_rule.{{ name }}.id
      arn:
        value: aws_xray_sampling_rule.{{ name }}.arn
