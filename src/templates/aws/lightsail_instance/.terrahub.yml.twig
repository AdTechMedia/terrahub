    resource:
      aws_lightsail_instance:
        {{ name }}:
          bundle_id: var.{{ name }}_bundle_id
          availability_zone: var.{{ name }}_availability_zone
          blueprint_id: var.{{ name }}_blueprint_id
          name: var.{{ name }}_name
          # key_pair_name: ''
          # user_data: ''
          # tags: 
          #   '[TO_BE_REPLACED]': ''
    variable:
      {{ name }}_bundle_id:
        type: string
      {{ name }}_availability_zone:
        type: string
      {{ name }}_blueprint_id:
        type: string
      {{ name }}_name:
        type: string
    output:
      id:
        value: aws_lightsail_instance.{{ name }}.id
      thub_id:
        value: aws_lightsail_instance.{{ name }}.id
      cpu_count:
        value: aws_lightsail_instance.{{ name }}.cpu_count
      ipv6_address:
        value: aws_lightsail_instance.{{ name }}.ipv6_address
      arn:
        value: aws_lightsail_instance.{{ name }}.arn
      created_at:
        value: aws_lightsail_instance.{{ name }}.created_at
      is_static_ip:
        value: aws_lightsail_instance.{{ name }}.is_static_ip
      public_ip_address:
        value: aws_lightsail_instance.{{ name }}.public_ip_address
      username:
        value: aws_lightsail_instance.{{ name }}.username
      private_ip_address:
        value: aws_lightsail_instance.{{ name }}.private_ip_address
      ram_size:
        value: aws_lightsail_instance.{{ name }}.ram_size
