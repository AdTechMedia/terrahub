    resource:
      aws_dx_public_virtual_interface:
        {{ name }}:
          route_filter_prefixes: var.{{ name }}_route_filter_prefixes
          connection_id: var.{{ name }}_connection_id
          name: var.{{ name }}_name
          vlan: var.{{ name }}_vlan
          bgp_asn: var.{{ name }}_bgp_asn
          address_family: var.{{ name }}_address_family
          # customer_address: ''
          # bgp_auth_key: ''
          # amazon_address: ''
          # tags: 
          #   '[TO_BE_REPLACED]': ''
    variable:
      {{ name }}_route_filter_prefixes:
        type: set
      {{ name }}_connection_id:
        type: string
      {{ name }}_name:
        type: string
      {{ name }}_vlan:
        type: int
      {{ name }}_bgp_asn:
        type: int
      {{ name }}_address_family:
        type: string
    output:
      id:
        value: aws_dx_public_virtual_interface.{{ name }}.id
      thub_id:
        value: aws_dx_public_virtual_interface.{{ name }}.id
      customer_address:
        value: aws_dx_public_virtual_interface.{{ name }}.customer_address
      aws_device:
        value: aws_dx_public_virtual_interface.{{ name }}.aws_device
      bgp_auth_key:
        value: aws_dx_public_virtual_interface.{{ name }}.bgp_auth_key
      arn:
        value: aws_dx_public_virtual_interface.{{ name }}.arn
      amazon_address:
        value: aws_dx_public_virtual_interface.{{ name }}.amazon_address
