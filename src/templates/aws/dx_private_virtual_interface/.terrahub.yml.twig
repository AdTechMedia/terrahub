          # tags: 
          #   '[TO_BE_REPLACED]': ''
          # bgp_auth_key: ''
          # customer_address: ''
          # vpn_gateway_id: ''
    variable:
      {{ name }}_bgp_asn:
        type: int
      {{ name }}_address_family:
        type: string
      {{ name }}_name:
        type: string
      {{ name }}_connection_id:
        type: string
      {{ name }}_vlan:
        type: int
    output:
      id:
        value: aws_dx_private_virtual_interface.{{ name }}.id
      thub_id:
        value: aws_dx_private_virtual_interface.{{ name }}.id
      amazon_address:
        value: aws_dx_private_virtual_interface.{{ name }}.amazon_address
      jumbo_frame_capable:
        value: aws_dx_private_virtual_interface.{{ name }}.jumbo_frame_capable
      arn:
        value: aws_dx_private_virtual_interface.{{ name }}.arn
      bgp_auth_key:
        value: aws_dx_private_virtual_interface.{{ name }}.bgp_auth_key
      customer_address:
        value: aws_dx_private_virtual_interface.{{ name }}.customer_address
      aws_device:
        value: aws_dx_private_virtual_interface.{{ name }}.aws_device
