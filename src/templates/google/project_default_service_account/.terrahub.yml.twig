  template:  
    # terraform:
    #   backend:
    #     bucket: 'tf-state-prod'
    #     prefix: 'terraform/state'
    resource:
      null_resource:
        {{ name }}:
          triggers:
            project_id: ${var.{{ name }}_project_id}
            service_account_name: ${var.{{ name }}_service_account_name}
          provisioner:
            - local-exec:
                when: create
                command: 'python ${local.component["path"]}/scripts/apply.py'
                environment:
                  project_id: ${var.{{ name }}_project_id}
                  service_account_name: ${var.{{ name }}_service_account_name}
    output:
      service_account_name:
        value: ${var.{{ name }}_project_id}@${var.{{ name }}_project_id}.iam.gserviceaccount.com
    variable:
      {{ name }}_service_account_name:
        type: string
      {{ name }}_project_id:
        type: string
