{
  "version": "2",
  "exclude_patterns": [
    "**/tests/",
    "**/src/templates/"
  ],
  "checks": {
    "file-lines": {
      "config": {
        "threshold": 550
      }
    },
    "method-complexity": {
      "config": {
        "threshold": 18
      }
    },
    "method-lines": {
      "config": {
        "threshold": 100
      }
    },
    "method-count": {
      "config": {
        "threshold": 35
      }
    },
    "argument-count": {
      "config": {
        "threshold": 5
      }
    },
    "similar-code": {
      "enabled": false
    }
  },
  "plugins": {
    "eslint": {
      "enabled": true,
      "channel": "eslint-5",
      "config": {
        "config": ".eslintrc.json"
      },
      "exclude_patterns": [
        "tests/",
        "src/helpers/hcl-helper.js"
      ]
    },
    "nodesecurity": {
      "enabled": true
    },
    "structure": {
      "enabled": true,
      "exclude_patterns": [
        "bin/converter/*.go"
      ]
    },
    "fixme": {
      "enabled": true,
      "exclude_patterns": [
        "bin/converter/*.go"
      ]
    }
  }
}
